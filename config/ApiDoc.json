{
    "API_LON_Loan": {
        "name": "Company Information API",
        "description": "Retrieves information about companies from MongoDB database",
        "version": "1.0.0",
        "database": {
            "type": "mongodb",
            "name": "testReza",
            "table": "people",
            "last_update_table": "people"
        },
        "pagination": {
            "enabled": true,
            "default_limit": 50,
            "max_limit": 100
        },
        "ordering": {
            "default_field": "",
            "default_direction": "ASC"
        },
        "LastUpdateTableName": "componies",
        "cache": {
            "enabled": false,
            "ttl": 60
        },
        "conditions": [
            {
                "Founded_year": {
                    "action": "update_condition",
                    "parameter": "Founded_year",
                    "name": "Founded Year",
                    "display_name": "Founded Year",
                    "column": "founded_year",
                    "operator": "=",
                    "ignoreIf": "-3",
                    "required": false,
                    "data_type": "integer",
                    "category": "Identification",
                    "transformations": {},
                    "validation": {
                        "min": 1900,
                        "max": 2023
                    }
                }
            },
            {
                "month": {
                    "action": "update_condition",
                    "parameter": "month",
                    "name": "Month",
                    "display_name": "Month",
                    "column": "founded_month",
                    "operator": "=",
                    "ignoreIf": "-3",
                    "required": false,
                    "data_type": "integer",
                    "category": "Identification",
                    "transformations": {},
                    "validation": {
                        "min": 1,
                        "max": 12
                    }
                }
            },
            {
                "category_code": {
                    "action": "update_condition",
                    "parameter": "category_code",
                    "name": "Category Code",
                    "display_name": "Category Code",
                    "column": "category_code",
                    "operator": "=",
                    "ignoreIf": "All",
                    "required": false,
                    "data_type": "string",
                    "category": "Identification",
                    "transformations": {}
                }
            }
        ],
        "response": {
            "fields": [
                "name",
                "category_code",
                "founded_year",
                "founded_month",
                "description"
            ],
            "transformations": {
                "founded_date": "CONCAT(founded_year, '-', founded_month, '-01')"
            }
        }
    }
}