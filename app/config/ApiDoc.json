{
    "API_LON_Loan": {
        "name": "Company Information API",
        "description": "Retrieves information about companies from MongoDB database",
        "version": "1.0.0",
        "database": {
            "type": "mongodb",
            "table": "componies",
            "database": "testReza"
        },
        "pagination": {
            "enabled": true,
            "default_limit": 50,
            "max_limit": 100
        },
        "ordering": {
            "default_field": "name",
            "default_direction": "ASC"
        },
        "LastUpdateTableName": "componies",
        "cache": {
            "enabled": false,
            "ttl_seconds": 3600
        },
        "Conditions": [
            {
                "Founded_year": {
                    "action": "update_condition",
                    "Parameter": "Founded_year",
                    "Name": "Founded Year",
                    "display_name": "Founded Year",
                    "Column": "founded_year",
                    "Operator": "=",
                    "IgnoreIf": "-3",
                    "required": false,
                    "data_type": "integer",
                    "category": "Identification",
                    "transformations": {},
                    "validation": {
                        "min": 1900,
                        "max": 2023
                    }
                }
            },
            {
                "month": {
                    "action": "update_condition",
                    "Parameter": "month",
                    "Name": "Month",
                    "display_name": "Month",
                    "Column": "founded_month",
                    "Operator": "=",
                    "IgnoreIf": "-3",
                    "required": false,
                    "data_type": "integer",
                    "category": "Identification",
                    "transformations": {},
                    "validation": {
                        "min": 1,
                        "max": 12
                    }
                }
            },
            {
                "category_code": {
                    "action": "update_condition",
                    "Parameter": "category_code",
                    "Name": "Category Code",
                    "display_name": "Category Code",
                    "Column": "category_code",
                    "Operator": "=",
                    "IgnoreIf": "All",
                    "required": false,
                    "data_type": "string",
                    "category": "Identification",
                    "transformations": {}
                }
            }
        ],
        "response": {
            "fields": ["name", "category_code", "founded_year", "founded_month", "description"],
            "transformations": {
                "founded_date": "CONCAT(founded_year, '-', founded_month, '-01')"
            }
        }
    },
    "API_CUS_DepCustomer": {
        "name": "Customer Deposit API",
        "description": "Retrieves customer deposit information from MySQL database",
        "version": "1.0.0",
        "database": {
            "type": "mysql",
            "table": "RPT_CUS_DepCustomer",
            "database": "banking"
        },
        "pagination": {
            "enabled": true,
            "default_limit": 50,
            "max_limit": 100
        },
        "ordering": {
            "default_field": "cust_no",
            "default_direction": "ASC"
        },
        "LastUpdateTableName": "RPT_CUS_DepCustomer",
        "cache": {
            "enabled": false,
            "ttl_seconds": 3600
        },
        "Conditions": [
            {
                "BranchNo": {
                    "action": "update_condition",
                    "Parameter": "BranchNo",
                    "Name": "Branch Number",
                    "display_name": "Branch Number",
                    "Column": "branch_id",
                    "Operator": "in",
                    "IgnoreIf": "All",
                    "required": false,
                    "data_type": "string",
                    "category": "Filter",
                    "transformations": {
                        "cast": "varchar(20)"
                    }
                }
            },
            {
                "acct_no": {
                    "action": "update_condition",
                    "Parameter": "acct_no",
                    "Name": "Account Number",
                    "display_name": "Account Number", 
                    "Column": "acct_no",
                    "Operator": "<",
                    "IgnoreIf": "-3",
                    "required": false,
                    "data_type": "string",
                    "category": "Identification",
                    "transformations": {
                        "substring": [2, 11],
                        "replace": [null, null],
                        "trim": true,
                        "sqlCommand": "cast as int"
                    },
                    "validation": {
                        "min_length": 5,
                        "max_length": 20,
                        "pattern": "^[0-9]+"
                    }
                }
            }
        ],
        "response": {
            "fields": ["cust_no", "acct_no", "branch_id", "balance", "last_activity_date"],
            "transformations": {}
        }
    }
}